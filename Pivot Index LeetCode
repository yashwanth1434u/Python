class Solution:
    def pivotIndex(self, arr):
        n=len(arr)
        for i in range(0,n):
            lsum=0
            rsum=0
            for j in range(0,i):
                lsum=lsum+arr[j]
            for k in range(i+1,n):
                rsum=rsum+arr[k]
            if lsum==rsum:
                return i
        return -1
